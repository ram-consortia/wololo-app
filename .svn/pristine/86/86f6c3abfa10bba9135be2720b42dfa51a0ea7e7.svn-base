@charset 'utf-8';
@import "public/_config.scss";
body {
    background-color: #eee;
    height: 100%;
    .header{
        background-color: #fff;
        padding-top: pxToRem(50);
    }
    .top{
        margin-bottom: pxToRem(14);
        padding: pxToRem(40) pxToRem(30) pxToRem(30) pxToRem(30);
        background-color: #fff;
        /*.img{
            width: 100%;*/
            .imgHeader{
                @include flex-box($justify:space-between);
                margin-bottom: pxToRem(20);
            }
            .state{
                font-size: pxToRem(30);
                line-height: pxToRem(42);
                @include text-overflow(1);
                @extend .font-m;
            }
            .time{
                font-size: pxToRem(26);
                line-height: pxToRem(36);
                @include text-overflow(1);
            }
            .note{
                padding: pxToRem(30) pxToRem(30) pxToRem(30) pxToRem(20);
                background-color: rgba(249,249,250,1);;
                .title{
                    font-size: pxToRem(30);
                }
                .text{
                    font-size: pxToRem(26);
                    line-height: pxToRem(40);
                }
            }
        /*}*/
    }
    .ul-refund{
        background-color: #fff;
        padding: 0 pxToRem(30);
        .li-refund{
            @include flex-box();
            padding: pxToRem(29) 0;
            font-size: pxToRem(30);
            color: #333;
            line-height: pxToRem(42);
            @include border-bottom-m;
            &::after{
                border-color: #eee;
            };
            &:last-of-type{
                &::after{
                    border: none;
                };
            };
            &:first-of-type{
                content: '';
                @include border-top-m;
                &::before{
                    border-color: #eee;
                };
            };
            .refund-item{
                @include flex-item();
                font-size: pxToRem(30);
            }
            .money{
                color:rgba(255,96,67,1);
                font-size: pxToRem(30);
                line-height: pxToRem(42);
                font-weight:500;
            }
        }
    }

    .middle{
        background-color: #fff;
        padding: pxToRem(8) pxToRem(30) pxToRem(38);
        .cont{
            @include flex-box();

            .contImg{
                margin-right: pxToRem(20);
                width: pxToRem(140);
                height: pxToRem(140);
            }

            .message{
                .shop-name{
                    color:rgba(51,51,51,1);
                    font-size: pxToRem(30);
                    margin-bottom: pxToRem(10);
                }

                .subtitle{
                    color:rgba(176,176,176,1);
                    font-size: pxToRem(24);
                }

                .time{
                    margin-top: pxToRem(32);
                    color:rgba(255,96,67,1);
                    font-size: pxToRem(30);
                }

            }
        }
    }

    .ulP{
        background-color: #fff;
        padding: 0 pxToRem(30);
        .liP{
            @include flex-box();
            padding-bottom: pxToRem(16);
            font-size: pxToRem(24);
            color: rgba(176,176,176,1);
            line-height: pxToRem(40);
            //@include border-bottom-m;
            &::after{
                border-color: #eee;
            };
            &:last-of-type{
                &::after{
                    border: none;
                };
            };
            &:first-of-type{
                padding-top: pxToRem(30);
                content: '';
                @include border-top-m;
                &::before{
                    border-color: #eee;
                };
            };
            .name{
                width: pxToRem(152);
            }
            .message{
                @include flex-item();
                color:rgba(176,176,176,1);
            }
        }
    }

}
