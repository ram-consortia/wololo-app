@charset 'utf-8';
@import "public/_config.scss";
body {
    background-color: #f4f4f4;
    .header{

        margin-top: pxToRem(-20);

    }
    .main{

        height: 100%;
        padding-top: pxToRem(20);
        .con{
            margin: pxToRem(30) pxToRem(30) pxToRem(30) pxToRem(40);
            box-shadow:0px 4px 16px -4px rgba(0,0,0,0.08);
            border: pxToRem(2) solid #EAEAEA;
            background-color: rgba(255,255,255,1);
            border-radius: pxToRem(20);
            .odd-numbers{
                @include flex-box();
                padding: pxToRem(22);
                font-size: pxToRem(26);
                color: #666;
                line-height: pxToRem(36);

                .number{
                    @include flex-item();
                    padding-bottom: pxToRem(20);
                    @include border-bottom-m($color:#eee);
                }
                .after-sale{
                    color: #FF7C4A;
                    &.close{
                        color: #999;
                    }
                }
            }

            .coupon{
                @include border-bottom-m($style:dashed);
                position: relative;
                .couLeft{
                    width: pxToRem(26);
                    height: pxToRem(26);
                    border-radius: 50%;
                    position: absolute;
                    left: pxToRem(-13);
                    bottom: pxToRem(-13);
                    background-color: rgba(244,244,244,1);
                    z-index: 1;
                }
                .couRright{
                    width: pxToRem(26);
                    height: pxToRem(26);
                    border-radius: 50%;
                    position: absolute;
                    right: pxToRem(-13);
                    bottom: pxToRem(-13);
                    background-color: rgba(244,244,244,1);
                    z-index: 1;
                }
                .coupon-item{
                    margin: 0 pxToRem(30);

                    .price{
                        margin-right: pxToRem(-30);
                        box-shadow: none;
                        border: none;
                        .num{
                            background-color: rgba(255,255,255,1);
                            color:rgba(255,96,67,1);
                            font-weight:600;
                            font-size:pxToRem(60);
                        }
                        .voucher{
                            border: none;
                            color:rgba(176,176,176,1);
                        }
                    }
                    .message{
                        margin-left: pxToRem(-30);
                        box-shadow: none;
                        border: none;
                        .message-item{
                            .base{
                                .subtitle{
                                    color:rgba(51,51,51,1);
                                    font-weight:400;
                                    font-size: pxToRem(30);
                                }
                                .time{
                                    color:rgba(176,176,176,1);
                                }
                            }
                        }
                    }

                }
            }
                    

                    
            .bot{
                @include flex-box($justify:space-between);
                padding: pxToRem(24) pxToRem(22);
                text-align: right;
                .look{
                    display: inline-block;
                    width: pxToRem(156);
                    line-height: pxToRem(52);
                    text-align: center;
                    height: pxToRem(52);
                    //border: pxToRem(2) solid $bg-color;
                    border-radius: pxToRem(24);
                    font-size: pxToRem(24);
                    color: rgba(255,255,255,1);
                    background:linear-gradient(135deg,rgba(255,96,67,1) 0%,rgba(255,147,127,1) 100%);
                    margin-left: pxToRem(10);
                    &.del{
                        border: pxToRem(2) solid #999;
                        color: #333;
                    }
                }
                .after-saleTo{
                    color:rgba(176,176,176,1);
                    //padding-top: pxToRem(26);
                }
            }
        }
    }
    #no-data{
        &::before{
            @include set-bg-img( $name: "icon-nodata2.png", $size: pxToRem(320) auto, $position: center bottom);
        };
    }
}
