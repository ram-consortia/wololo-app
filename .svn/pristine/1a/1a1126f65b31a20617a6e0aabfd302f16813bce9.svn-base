    <script type="text/html" id="wrap-template">
        <div class="top-header">
            <header class="header">
                <div tapmode="hover" onclick="fnClose();" class="back icon-back"></div>
                <div class="title">{{'全部评价' | fnLanguage_public}}</div>
            </header>
            <div class="box">
                <div data-path="business/shopScore_frm.html" class="item">{{'待回复' | fnLanguage_public}}(<span id="not">0</span>)</div>
                <div data-path="business/shopScore_frm.html" class="item">{{'已回复' | fnLanguage_public}}(<span id="already">0</span>)</div>
            </div>
        </div>


        <div class="flex-item-vertical">

