<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="maximum-scale=1.0, minimum-scale=1.0, user-scalable=0, initial-scale=1.0, width=device-width" />
    <meta name="format-detection" content="telephone=no, email=no, date=no, address=no">
    <title></title>
    <link rel="stylesheet" href="../../css/newLogin.css">
    <script type="text/javascript" src="../../framework/zepto.min.js"></script>
</head>
<body>
<div class="page">
    <div>
        <div>
            <div class="back" onclick="fnClose()" tapmode="hover"></div>
        </div>
        <div class="img_illustration email_login_bg absolute" style="top: 10vh;height: 200px"></div>
    </div>
    <div class="flex1 flex column" style="z-index: 1">
        <div class="content padding20">
            <div>
                <div class="bold size32">Welcome back :)</div>
                <div class="grey">Log in your account using email.</div>
            </div>
        </div>
        <div class="padding20 input_group padding_top0">
            <div class="input_item">
                <div class="icon ic_email1"></div>
                <div class="input_content">
                    <div class="label">

                    </div>
                    <div class="flex">
                        <input type="text" id="email" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="input_item bg_fff">
                <div class="icon ic_pass"></div>
                <div class="input_content">
                    <div class="label"></div>
                    <div>
                        <input type="password" id="pass" placeholder="Password">
                    </div>
                </div>
                <div tapmode="hover" id="eye" class="eye">
                    <img src="../../image/icon-eye.png" alt="">
                </div>
            </div>
            <div class="forgot_passw bold" tapmode="hover" onclick="fnOpenSetPassword_base()">
                Forgot password?
            </div>
            <div class="input_item btn" onclick="login()">
                Continue
            </div>
            <div class="grey tx_center">
                New user? <span class="bold black" tapmode="hover" onclick="toRegister()">Register now</span>
            </div>
        </div>
    </div>
</div>
<script src="./inputscript.js"></script>
<script src="../../script/public.js"></script>
<script src="../../script/base.js"></script>
<script src="./login.js"></script>
<script>
    function fnCustomMd5_base(_obj, _cb) {
        if (fnHasEmpty_public(_obj)) {
            _obj = {};
        } else if (typeof _obj === 'function') {
            _cb = _obj;
            _obj = {};
        }
        _obj.data = ['www.suuzi.cn', _obj.data].join();
        fnMd5_public(_obj, function (ret) {
            _cb && _cb(ret);
        })
    }
    apiready=function (){
        inputScript();
        api.addEventListener({
            name: 'keyback'
        }, function(ret, err) {
            toSignIn();
        });

    }
    function toSignIn(){
        // api.openWin({
        //     name:'signIn',
        //     url:`./signIn_win.html`
        // })
        fnClose();
        api.addEventListener({
            name:'viewdisappear'
        },function(){
            api.closeWin();
        })
    }
    function toRegister(){
        api.openWin({
            name:'register',
            url:`./register_win.html`
        })
        api.addEventListener({
            name:'viewdisappear'
        },function(){
            api.closeWin();
        })
    }
</script>
</body>
</html>