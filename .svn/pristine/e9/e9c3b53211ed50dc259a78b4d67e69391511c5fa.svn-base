    </div>
</div>
<div class="padding20">
    <div class="btn btn_default" tapmode="hover" onclick="submitReview()">
        Save a Review
    </div>
</div>

</body>
<script type="text/javascript" src="../../framework/zepto.min.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script type="text/javascript" src="../../script/base.js"></script>
<script type="text/javascript">
    let id =null,starNum=5;
    APP.init(() => {
        id=APP._param.id;
    });
    function callback(){
        let stars=$('#stars').children();
        for(let i=0;i<stars.length;i++){
            stars[i].ontouchstart=function (e){
                let star1=`<div><svg viewBox="64 64 896 896" focusable="false" data-icon="star" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M908.1 353.1l-253.9-36.9L540.7 86.1c-3.1-6.3-8.2-11.4-14.5-14.5-15.8-7.8-35-1.3-42.9 14.5L369.8 316.2l-253.9 36.9c-7 1-13.4 4.3-18.3 9.3a32.05 32.05 0 00.6 45.3l183.7 179.1-43.4 252.9a31.95 31.95 0 0046.4 33.7L512 754l227.1 119.4c6.2 3.3 13.4 4.4 20.3 3.2 17.4-3 29.1-19.5 26.1-36.9l-43.4-252.9 183.7-179.1c5-4.9 8.3-11.3 9.3-18.3 2.7-17.5-9.5-33.7-27-36.3zM664.8 561.6l36.1 210.3L512 672.7 323.1 772l36.1-210.3-152.8-149L417.6 382 512 190.7 606.4 382l211.2 30.7-152.8 148.9z"></path></svg></div>`
                let star2=`<div><svg viewBox="64 64 896 896" focusable="false" data-icon="star" width="1em" height="1em" fill="currentColor" aria-hidden="true"><path d="M908.1 353.1l-253.9-36.9L540.7 86.1c-3.1-6.3-8.2-11.4-14.5-14.5-15.8-7.8-35-1.3-42.9 14.5L369.8 316.2l-253.9 36.9c-7 1-13.4 4.3-18.3 9.3a32.05 32.05 0 00.6 45.3l183.7 179.1-43.4 252.9a31.95 31.95 0 0046.4 33.7L512 754l227.1 119.4c6.2 3.3 13.4 4.4 20.3 3.2 17.4-3 29.1-19.5 26.1-36.9l-43.4-252.9 183.7-179.1c5-4.9 8.3-11.3 9.3-18.3 2.7-17.5-9.5-33.7-27-36.3z"></path></svg></div>`
                let str='';
                for(let j=0;j<=i;j++){
                    str+=star2;
                }
                starNum=i+1;
                for(let j=0;j<5-i-1;j++){
                    str+=star1;
                }
                $('#stars').html(str);
                callback();
            }
        }
    }
    callback();
    function submitReview(){
        let comment= $('#comment').val();
        fnAjax({
            url:"base/Comment/operationPost",
            method:"post",
            data:{
                store_id:id,
                score:starNum,
                content:comment,
            }
        },res=>{
            fnToast(res.msg);
            if(res.code){
                api.execScript({
                    name:"userReviews_win",
                    script:"refresh()"
                })
                fnClose();
            }
        })
    }
</script>

</html>